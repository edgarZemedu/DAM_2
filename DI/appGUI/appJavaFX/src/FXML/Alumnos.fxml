        <Button layoutX="449.0" layoutY="362.0" mnemonicParsing="false" onAction="#eliminarAlumno" stylesheets="@../estilos/alumnos.css" text="Eliminar">
         <styleClass>
            <String fx:value="boton" />
            <String fx:value="boton2" />
         </styleClass></Button>
    </children>
